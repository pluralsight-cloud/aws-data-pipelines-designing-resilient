{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "S3AccessForGlueJob",
            "Effect": "Allow",
            "Action": [
                "s3:GetObject",
                "s3:PutObject",
                "s3:DeleteObject"
            ],
            "Resource": [
                "arn:aws:s3:::ps-demo-resilient-pipeline-rt/*",
                "arn:aws:s3:::ps-demo-resilient-pipeline-rt"
            ]
        },
        {
            "Sid": "GlueCatalogAccess",
            "Effect": "Allow",
            "Action": [
                "glue:GetDatabase",
                "glue:GetTable",
                "glue:CreateTable",
                "glue:UpdateTable"
            ],
            "Resource": "*"
        }
    ]
}